<scene>
	<!-- Independent sample generator, 32 samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="32"/>
	</sampler>

	<!-- Use the path tracer with multiple importance sampling -->
	<integrator type="path"/>

	<!-- Render the scene as viewed by a perspective camera -->
	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="-10, 25, 0" origin="-75.0, 40.0, 70.0" up="0, 1, 0"/>
		</transform>

		<!-- Field of view: 45 degrees -->
		<float name="fov" value="30"/>

		<!-- 768 x 768 pixels -->
		<integer name="width" value="768"/>
		<integer name="height" value="768"/>
	</camera>

	<!-- Load the Ajax bust (a freely available scan from the Jotero forum) 
	<mesh type="obj">
		<string name="filename" value="meshes/ajax.obj"/>
		<transform name="toWorld">
			<translate value="-9, 0, 0"/>
		</transform>
		<bsdf type="phong">
			<color name="kd" value="0.5, 0.4, 0.3"/>
                        <color name="ks" value="0.5, 0.4, 0.3"/>
                        <float name="n" value="5"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="meshes/ajax.obj"/>
		<transform name="toWorld">
			<translate value="9, 0, 18"/>
		</transform>
		<bsdf type="diffuse">
			<color name="kd" value="0.5, 0.4, 0.3"/>
		</bsdf>
	</mesh>-->
	
	<mesh type="obj">
		<string name="filename" value="meshes/bunny.obj"/>
		<transform name="toWorld">
   		<scale value="15, 15, 15"/>
			<translate value="9, 5, -15"/>
		</transform>
		<bsdf type="diffuse">
			<color name="kd" value="0.5, 0.4, 0.3"/>
		</bsdf>
	</mesh>
	
	<mesh type="obj">
		<string name="filename" value="meshes/armadillo.obj"/>
		<transform name="toWorld">
   		<scale value="5, 5, 5"/>
   		<rotate axis="0, 1, 0" angle="100"/>
			<translate value="7, 34, -10"/>
		</transform>
		<bsdf type="diffuse">
			<color name="kd" value="0.5, 0.0, 0.7"/>
		</bsdf>
	</mesh>
	
	<mesh type="obj">
		<string name="filename" value="meshes/teapot.obj"/>
		<transform name="toWorld">
   		<scale value="0.1, 0.1, 0.1"/>
			<translate value="-11, 36, -10"/>
		</transform>
		<bsdf type="phong">
			<color name="kd" value="0.7, 0.7, 0.3"/>
                        <color name="ks" value="0.7, 0.7, 0.3"/>
                        <float name="n" value="5"/>
		</bsdf>
	</mesh>
	
	

	<mesh type="obj">
		<string name="filename" value="meshes/plane.obj"/>
		<transform name="toWorld">
			<scale value="5000, 1, 50000"/>
		</transform>

		<bsdf type="diffuse">
			<color name="albedo" value="0.3, 0.9, 0.3"/>
		</bsdf>
	</mesh>

	<mesh type="obj">
		<string name="filename" value="meshes/plane.obj"/>
		<transform name="toWorld">
			<scale value="20,-1,20"/>
			<translate value="0,80,50"/>
		</transform>

		<luminaire type="area">
			<color name="radiance" value="30, 30, 30"/>
		</luminaire>
	</mesh>

</scene>
